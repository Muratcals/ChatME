<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/followImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/profil_icon"
        android:layout_marginStart="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/followAuthName"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="demirtas52samet seni takip etmeye başladı"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_11ssp" />

        <Button
            android:id="@+id/followButton"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/_25sdp"
            android:text="Takip Et"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_8sdp"
            android:background="@drawable/button_backgorund_gray_shape"
            app:backgroundTint="@null"/>
    </LinearLayout>


</LinearLayout>